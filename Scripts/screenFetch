#!/bin/bash

# Comprobar si neofetch est치 instalado
if ! command -v neofetch &> /dev/null
then
    # Si no est치 instalado, instalarlo
    echo "Neofetch no est치 instalado. Instalando..."
    sudo apt update
    sudo apt install -y neofetch
fi

# Mostrar la informaci칩n del sistema con neofetch
neofetch  --ascii_colors 33 34

